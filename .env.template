# ملف .env - مثال مع قيم حقيقية
# انسخ هذا الملف إلى .env واستبدل القيم بمعلوماتك من Auth0

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/edu-platform?authSource=admin

# Backend Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Auth0 Configuration
# احصل على هذه القيم من Auth0 Dashboard > Applications > [Your App] > Settings
AUTH0_DOMAIN=dev-abc123.us.auth0.com          # مثال: dev-xyz789.us.auth0.com
AUTH0_CLIENT_ID=AbCdEf1234567890              # مثال: 1a2b3c4d5e6f7g8h9i0j
AUTH0_CLIENT_SECRET=XyZ9876543210aBc          # مثال: secret_key_from_auth0
AUTH0_AUDIENCE=https://edu-platform-api.com   # من Auth0 Dashboard > APIs > [Your API] > Identifier
AUTH0_ISSUER=https://dev-abc123.us.auth0.com/ # نفس AUTH0_DOMAIN مع إضافة /

# Frontend Auth0 Configuration
# يجب أن تكون نفس القيم أعلاه
VITE_AUTH0_DOMAIN=dev-abc123.us.auth0.com     # نفس AUTH0_DOMAIN
VITE_AUTH0_CLIENT_ID=AbCdEf1234567890         # نفس AUTH0_CLIENT_ID

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# API Configuration
VITE_BACKEND_URL=http://localhost:5000/api

# Logging
LOG_LEVEL=info

# Security
DEVICE_LIMIT=2

# ملاحظات مهمة:
# 1. لا تشارك Client Secret مع أحد
# 2. تأكد من إعداد Callback URLs في Auth0:
#    - Allowed Callback URLs: http://localhost:3000/callback,http://localhost:3000
#    - Allowed Logout URLs: http://localhost:3000
#    - Allowed Web Origins: http://localhost:3000
#    - Allowed Origins (CORS): http://localhost:3000
# 3. بعد تحديث هذا الملف، أعد تشغيل المشروع:
#    docker-compose down && docker-compose up -d