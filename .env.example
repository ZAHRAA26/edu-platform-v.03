# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/edu-platform?authSource=admin

# Backend Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-api.com
AUTH0_ISSUER=https://your-domain.auth0.com/

# Frontend Auth0 Configuration
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://edu-platform-api.com

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=edu-platform

# API Configuration
VITE_BACKEND_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Configuration
APP_NAME=Educational Platform
APP_VERSION=3.0.0
APP_DESCRIPTION=Smart Educational Platform
VITE_APP_NAME=Educational Platform
VITE_APP_VERSION=3.0.0
VITE_APP_DESCRIPTION=Smart Educational Platform
VITE_SUPPORT_EMAIL=support@edu-platform.com

# Admin Configuration
ADMIN_EMAIL=admin@edu-platform.com
ADMIN_USERNAME=admin
ADMIN_NAME=System Administrator

# Security Configuration
DEVICE_LIMIT=2
JWT_SECRET=your-jwt-secret-key
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_METRICS=true
ENABLE_SENTRY=false
ENABLE_DEVICE_TRACKING=true
ENABLE_FILE_UPLOAD=true
VITE_ENABLE_DEVICE_TRACKING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# UI Configuration
VITE_DEFAULT_LANGUAGE=ar
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10
VITE_MAX_FILE_SIZE=10485760

# Development Configuration
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=info